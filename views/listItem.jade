doctype html
html(lang='en')
    body
        include head
        link(href='css/shop-register.css', rel='stylesheet')
        // Page Content
        .container
            .row
                .col-md-12
                    .row
                        .middle-container
                            .middle-container.form-signin
                                .register-title
                                    p.register-title TEC List Item
                                form(method='post')
                                    .item.uname
                                        input(value=userid, type='hidden', name='userid')
                                        label.item.item-input
                                            span.input-label(style='color: #aaa;') Name
                                            input#name.form-control(name="name", type='text', required="required")
                                        label.item.item-input
                                            span.input-label(style='color: #aaa;') Summary
                                            input#summary.form-control(name="summary", type='text', required="required")
                                        label.item.item-input
                                            span.input-label(style='color: #aaa;') Description
                                            input#description.form-control(name="description", type='text',  required="required")
                                        label.item.item-input
                                            span.input-label(style='color: #aaa;') Price
                                            input#price.form-control(name="price", type='number',  required="required")
                                        label.item.item-input
                                            span.input-label(style='color: #aaa;') Listing End Date
                                            input#enddate.form-control(placeholder='End Date', name="enddate", type='date',  required="required")
                                        label.item.item-input
                                            span.input-label(style='color: #aaa;') Quantity
                                            input#stockcount.form-control(name="stockcount", type='number',  required="required")
                                        label.item.item-input
                                            span.input-label(style='color: #aaa;') Category
                                            select#catagory.form-control(name='catagory', required="required")
                                                option(name="category", type='text', required="required", value='programminglanguages') Programming Languages
                                                option(name="category", type='text', required="required" ,value='operatingsystems') Operating Systems
                                                option(name="category", type='text', required="required", value='computerscience') Computer Science
                                                option(name="category", type='text', required="required", value='business') Business
                                                option(name="category", type='text', required="required", value='databases') Databases
                                                option(name="category", type='text', required="required" ,value='programming') Game Programming
                                                option(name="category", type='text', required="required", value='graphics') Graphics
                                                option(name="category", type='text', required="required", value='opensource') Open Source
                                                option(name="category", type='text', required="required", value='userguides') User Guides
                                                option(name="category", type='text', required="required", value='other') Other
                                        if(catagory == 'programminglanguages')//tits this didnt work
                                            label.item.item-input
                                                span.input-label(style='color: #aaa;') Type
                                                select#type.form-control(name='type', required="required")
                                                    option(name="type", type='text', required="required", value='volvo') Volvo XC90
                                                    option(name="type", type='text', required="required" ,value='saab') Saab 95
                                                    option(name="type", type='text', required="required", value='mercedes') Mercedes SLK
                                                    option(name="type", type='text', required="required", value='mercedes') Mercedes SLK

                                    .item.button
                                        button.btn.btn-success(href='#', type='submit') List
        // /.container
        hr
        include foot
        // /.container
        // jQuery
        script(src='js/jquery.js')
        // Bootstrap Core JavaScript
        script(src='js/bootstrap.min.js')
