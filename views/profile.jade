doctype html
html(lang='en')
    body
        include head
        link(href='css/shop-profile.css', rel='stylesheet')
        // Page Content
        .container
            .row
                include sidebar
                .col-md-9
                    p.lead #{user.username}
                    .left-side
                        p User id: #{user.id}
                        p Name: #{user.fname} #{user.lname}
                        p Address: #{user.address}
                        p Email: #{user.email}
                        if userid == user.id
                          p 
                            a(href="/listitem") List item
                    .right-side
                        img(id='profile-image',src='http://placehold.it/300x200', alt='')
        // /.container
    hr
    include foot
    // jQuery
    script(src='js/jquery.js')
    // Bootstrap Core JavaScript
    script(src='js/bootstrap.min.js')
