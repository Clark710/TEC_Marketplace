doctype html
html(lang='en')
    body
        include head
        link(href='css/shop-login.css', rel='stylesheet')
        // Page Content
        .container
            .row
                .col-md-12
                    .row
                        .middle-container
                            .middle-container.form-signin
                                .register-title
                                    p.register-title Login
                                form(method='post')
                                    .item.uname
                                        input#username.form-control(placeholder='Username', type='text')
                                    .item.pass
                                        input#password.form-control(placeholder='Password', type='password')
                                    .item.button
                                        button.btn.btn-default(href='#', type='submit') Login
        // /.container
        hr
        include foot
        // /.container
        // jQuery
        script(src='js/jquery.js')
        // Bootstrap Core JavaScript
        script(src='js/bootstrap.min.js')