    body
        // Navigation
        nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
            .container
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') TEC
                // Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav.left
                        li
                            a(href='/search') Browse
                        li
                            a(href='/contact') Contact
                        li
                    ul.nav.navbar-nav.right
                        li
                            a(href='/login') Login
                        li
                            a(href='/register') Register
                    .nav.navbar-nav.middle
                        input(id='searchBox', type='text', placeholder='Search...', required='', style='backgroundColor=#fff;', href='/search')
                        input(id='submitButton', type='button', value='Search')
                // /.navbar-collapse
            // /.container
        // Page Content
        .container
            .row
                .col-md-3
                    p.lead Top End Code
                    .list-group
                        .list-group-item
