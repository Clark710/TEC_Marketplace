doctype html
html(lang='en')
    body
        include head
        // Page Content
        .container
            .row
                .col-md-3
                    p.lead Top End Code
                    .list-group
                        .list-group-item
                            details
                                summary <a href='#'>Programming Languages</a>
                                .drop-down-content.single-item
                                    a(href='#') Java
                                .drop-down-content.single-item
                                    a(href='#') Python
                                .drop-down-content.single-item
                                    a(href='#') C
                                .drop-down-content.single-item
                                    a(href='#') C#
                                .drop-down-content.single-item
                                    a(href='#') C++
                                .drop-down-content.single-item
                                    a(href='#') Ruby
                                .drop-down-content.single-item
                                    a(href='#') Other
                        .list-group-item
                            details
                                summary <a href='#'>Operating Systems</a>
                                .drop-down-content
                                    .drop-down-content.single-item
                                        a(href='#') Windows
                                    .drop-down-content.single-item
                                        a(href='#') Linux
                                    .drop-down-content.single-item
                                        a(href='#') OS X
                                    .drop-down-content.single-item
                                        a(href='#') iOS
                                    .drop-down-content.single-item
                                        a(href='#') Android
                                    .drop-down-content.single-item
                                        a(href='#') Other
                        .list-group-item
                            a(href='#') Computer Science
                        .list-group-item
                            a(href='#') Business
                        .list-group-item
                            a(href='#') Databases
                        .list-group-item
                            a(href='#') Game Programming
                        .list-group-item
                            a(href='#') Graphics
                        .list-group-item
                            a(href='#') Open Source
                        .list-group-item
                            a(href='#') User Guides
                        .list-group-item
                            a(href='#') Other
                .col-md-9
                    p.lead #{title}
                    .search-results-list
                        each item in items
                          .row
                            .search-results-list.search-results-item
                                img(id='search-results-image', src='images/#{item.id}hres.png', alt='')
                                .search-results-list.search-results-item.ratings
                                    p
                                        if item.rating > 0
                                            span.glyphicon.glyphicon-star
                                        else
                                            span.glyphicon.glyphicon-star-empty
                                        if item.rating > 1.5
                                            span.glyphicon.glyphicon-star
                                        else
                                            span.glyphicon.glyphicon-star-empty
                                        if item.rating > 2.5
                                            span.glyphicon.glyphicon-star
                                        else
                                            span.glyphicon.glyphicon-star-empty
                                        if item.rating > 3.5
                                            span.glyphicon.glyphicon-star
                                        else
                                            span.glyphicon.glyphicon-star-empty
                                        if item.rating > 4.5
                                            span.glyphicon.glyphicon-star
                                        else
                                            span.glyphicon.glyphicon-star-empty
                                    p #{item.reviews} reviews
                                .search-results-list.search-results-item.price-and-buy
                                    p.search-results-list.search-results-item.price-and-buy.price() $#{item.price}
                                    a.search-results-list.search-results-item.price-and-buy.buy(href='#') Add to Cart
                                .search-results-list.search-results-item.title-description
                                    p.search-results-list.search-results-item.title-description.title 
                                        a(href="/view?itemid=#{item.id}") #{item.name}
                                    p.search-results-list.search-results-item.title-description.description #{item.summary}
        // /.container
        .container
            hr
            // Footer
            footer
                .row
                    .col-lg-12
                        p Copyright Â© TEC 2016
