doctype html
html(lang='en')
    body
        include head
        // Page Content
        .container
            .row
                .col-md-3
                    p.lead Top End Code
                    .list-group
                        .list-group-item
                            summary Textbooks
                            .drop-down-content
                                .drop-down-content.single-item
                                    a(href='#') Programming
                                .drop-down-content.single-item
                                    a(href='#') Marketing
                                .drop-down-content.single-item
                                    a(href='#') Other
                        .list-group-item
                            summary Magazines
                            .drop-down-content
                                .drop-down-content.single-item
                                    a(href='#') Programming
                                .drop-down-content.single-item
                                    a(href='#') Marketing
                                .drop-down-content.single-item
                                    a(href='#') Other
                        .list-group-item
                            summary DVDs
                            .drop-down-content
                                .drop-down-content.single-item
                                    a(href='#') Programming
                                .drop-down-content.single-item
                                    a(href='#') Marketing
                                .drop-down-content.single-item
                                    a(href='#') Other
                        .list-group-item
                            summary Software
                            .drop-down-content
                                .drop-down-content.single-item
                                    a(href='#') Business
                                .drop-down-content.single-item
                                    a(href='#') Home
                        .list-group-item
                            summary EReaders
                            .drop-down-content
                                .drop-down-content.single-item
                                    a(href='#') Gen 1
                                .drop-down-content.single-item
                                    a(href='#') Gen 2
                .col-md-9
                    p.lead #{title}
                    .search-results-list
                        each item in items
                          .row
                            .search-results-list.search-results-item
                                img(id='search-results-image', src='images/#{item.id}hres.png', alt='')
                                .search-results-list.search-results-item.ratings
                                    p
                                        if item.rating > 0
                                            span.glyphicon.glyphicon-star
                                        else
                                            span.glyphicon.glyphicon-star-empty
                                        if item.rating > 1.5
                                            span.glyphicon.glyphicon-star
                                        else
                                            span.glyphicon.glyphicon-star-empty
                                        if item.rating > 2.5
                                            span.glyphicon.glyphicon-star
                                        else
                                            span.glyphicon.glyphicon-star-empty
                                        if item.rating > 3.5
                                            span.glyphicon.glyphicon-star
                                        else
                                            span.glyphicon.glyphicon-star-empty
                                        if item.rating > 4.5
                                            span.glyphicon.glyphicon-star
                                        else
                                            span.glyphicon.glyphicon-star-empty
                                    p #{item.reviews} reviews
                                .search-results-list.search-results-item.price-and-buy
                                    p.search-results-list.search-results-item.price-and-buy.price() $#{item.price}
                                    a.search-results-list.search-results-item.price-and-buy.buy(href='#') Add to Cart
                                .search-results-list.search-results-item.title-description
                                    p.search-results-list.search-results-item.title-description.title 
                                        a(href="/view?itemid=#{item.id}") #{item.name}
                                    p.search-results-list.search-results-item.title-description.description #{item.summary}
        // /.container
        .container
            hr
            // Footer
            footer
                .row
                    .col-lg-12
                        p Copyright Â© TEC 2016
        // /.container
        // jQuery
        script(src='js/jquery.js')
        // Bootstrap Core JavaScript
        script(src='js/bootstrap.min.js')
