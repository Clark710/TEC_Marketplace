doctype html
html(lang='en')
    body
        include head
        link(href='css/shop-cart.css', rel='stylesheet')
        // Page Content
        p #{title}     
        .container
            .row
                include sidebar
                .col-md-9
                    .left-side
                        .search-results-list
                            each item, index in items
                                .row
                                    .search-results-list.search-results-item
                                        img(id='search-results-image', src='images/book-image.png', alt='')
                                        p.search-results-item.title-text #{item.name}
                                        p.search-results-item.price-text $#{item.price}
                                        p.search-results-item.description-text #{item.summary}
                                        a(href='/cart?index=' + index) Remove
                    .right-side
                        .cart-summary
                            p.cart-summary.title-text Cart Summary
                            p.cart-summary.price $#{totalPrice}
                            a.cart-summary.proceed-button(href='') Proceed To Checkout

        hr
        include foot
        // jQuery
        script(src='js/jquery.js')
        // Bootstrap Core JavaScript
        script(src='js/bootstrap.min.js')
